<Window x:Class="CafeManagement.AdminWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CafeManagement"
        mc:Ignorable="d"
        Title="Trang quản trị" Height="400" Width="500"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize" Background="#F0F0F0">

    <Border Background="White" CornerRadius="10" Padding="20" Margin="20,32,20,20" BorderBrush="#CCC" BorderThickness="1">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="350" Height="332" >

            <!-- Lời chào admin -->
            <TextBlock x:Name="txtWelcome" FontSize="18" FontWeight="Bold" Foreground="#333"
                       TextAlignment="Center" Margin="0,0,0,20"/>

            <!-- Nút chức năng -->
            <Button Content="☕ Quản lý thực đơn" Click="btnManageMenu_Click"
                    Height="45" FontSize="16" Margin="0,0,0,10"
                    Background="#007ACC" Foreground="White" BorderBrush="#007ACC"/>

            <Button Content="🪑 Quản lý bàn" Click="btnManageTables_Click"
                    Height="45" FontSize="16" Margin="0,0,0,10"
                    Background="#28A745" Foreground="White" BorderBrush="#28A745"/>

            <Button Content="📄 Xem hóa đơn" Click="btnViewBills_Click"
                    Height="45" FontSize="16" Margin="0,0,0,10"
                    Background="#FFC107" Foreground="Black" BorderBrush="#FFC107"/>

            <Button Content="Quản lý nhân viên" Click="BtnManageUsers_Click"
                    Height="45" FontSize="16" Margin="0,0,0,10"
                    Background="AntiqueWhite" Foreground="Black" BorderBrush="#FFC107"/>


            <Button Content="🔓 Đăng xuất" Click="btnLogout_Click"
                    Height="40" FontSize="14" Background="#DC3545"
                    Foreground="White" BorderBrush="#DC3545" />
        </StackPanel>
    </Border>
</Window>
